                <a asp-action="Edit" asp-route-id="@item.IdEmploye">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdEmploye">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdEmploye">Delete</a>
