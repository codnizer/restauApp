@model Employe

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-person-gear me-2"></i>Edit Employee</h3>
        </div>
        
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="IdEmploye" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Nom" class="form-control" placeholder=" " />
                            <label asp-for="Nom"></label>
                            <span asp-validation-for="Nom" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Prenom" class="form-control" placeholder=" " />
                            <label asp-for="Prenom"></label>
                            <span asp-validation-for="Prenom" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="Role" class="form-select">
                                <option value="Admin">Admin</option>
                                <option value="Serveur">Serveur</option>
                                <option value="Hotesse">Hotesse d'accueil</option>
                            </select>
                            <label asp-for="Role"></label>
                            <span asp-validation-for="Role" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="IdRestaurant" class="form-select" 
                                    asp-items="ViewBag.IdRestaurant">
                                <option value="">Select Restaurant</option>
                            </select>
                            <label asp-for="IdRestaurant"></label>
                            <span asp-validation-for="IdRestaurant" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-floating">
                            <input asp-for="TablesAssignees" class="form-control" 
                                   placeholder=" " 
                                   data-bs-toggle="tooltip" 
                                   title="Enter table numbers separated by commas (e.g., 1,5,7)"/>
                            <label asp-for="TablesAssignees">Assigned Tables</label>
                            <span asp-validation-for="TablesAssignees" class="text-danger small"></span>
                            <div class="form-text">Separate table numbers with commas</div>
                        </div>
                    </div>

                    <div class="col-12 mt-4">
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-check-circle me-2"></i>Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Initialize Bootstrap tooltips
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        tooltipTriggerList.forEach(tooltipTriggerEl => {
            new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}