@model Reservation

@{
    ViewData["Title"] = "Créer une réservation";
}

<h1>@ViewData["Title"]</h1>

<h4>Réservation</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DateRes" class="control-label"></label>
                <input asp-for="DateRes" class="form-control" id="DateRes" />
                <span asp-validation-for="DateRes" class="text-danger"></span>
            </div>
            




            <div class="form-group">
                <label asp-for="Heure" class="control-label"></label>
                <input asp-for="Heure" class="form-control" id="Heure" />
                <span asp-validation-for="Heure" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NombrePersonnes" class="control-label"></label>
                <input asp-for="NombrePersonnes" class="form-control" />
                <span asp-validation-for="NombrePersonnes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ServiceSpecial" class="control-label"></label>
                <input asp-for="ServiceSpecial" class="form-control" />
                <span asp-validation-for="ServiceSpecial" class="text-danger"></span>
            </div>

           
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                @Html.DropDownListFor(model => model.Status, (SelectList)ViewData["StatusList"], "Sélectionner un statut", new { @class = "form-control" })
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdUtilisateur" class="control-label"></label>
                <select asp-for="IdUtilisateur" class="form-control" asp-items="ViewBag.IdUtilisateur"></select>
                <span asp-validation-for="IdUtilisateur" class="text-danger"></span>
            </div>
            <!--
            <div class="form-group">
                <label>Vérification des tables disponibles</label>
                <button type="button" id="btnCheckTables" class="btn btn-info btn-sm">Vérifier les tables disponibles</button>
            </div>
            -->


            
            <div class="form-group">
                <label asp-for="IdTable" class="control-label"></label>
                <select asp-for="IdTable" class="form-control" asp-items="ViewBag.IdTable"></select>
            </div>

            <div class="form-group">
                <label asp-for="IdRestaurant" class="control-label"></label>
                <select asp-for="IdRestaurant" class="form-control" asp-items="ViewBag.IdRestaurant"></select>
                <span asp-validation-for="IdRestaurant" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Créer" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Retour</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
