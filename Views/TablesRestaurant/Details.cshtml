@model TableRestaurant

@{
    ViewData["Title"] = "Table Details";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">
                <i class="bi bi-table me-2"></i>
                Table Details: #@Model.Numero
            </h3>
        </div>

        <div class="card-body">
            <div class="row g-4">
                <!-- Table Information -->
                <div class="col-md-6">
                    <div class="details-section bg-light p-3 rounded">
                        <h5 class="section-title text-muted mb-4">
                            <i class="bi bi-info-circle me-2"></i>
                            Basic Information
                        </h5>
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Table Number</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-primary fs-5">
                                    <i class="bi bi-table me-2"></i>
                                    @Html.DisplayFor(model => model.Numero)
                                </span>
                            </dd>
                        </dl>
                    </div>
                </div>

                <!-- Location Information -->
                <div class="col-md-6">
                    <div class="details-section bg-light p-3 rounded">
                        <h5 class="section-title text-muted mb-4">
                            <i class="bi bi-geo-alt me-2"></i>
                            Location Details
                        </h5>
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Room</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-secondary fs-5">
                                    <i class="bi bi-door-open me-2"></i>
                                    @Html.DisplayFor(model => model.Salle.Nom)
                                </span>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model.IdTable" class="btn btn-primary">
                    <i class="bi bi-pencil me-2"></i>Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        .details-section {
            border: 1px solid rgba(0,0,0,0.125);
            transition: all 0.3s ease;
        }
        .section-title {
            font-size: 0.9rem;
            letter-spacing: 0.5px;
        }
        .badge {
            padding: 0.75em 1.25em;
            font-weight: 500;
        }
        .card {
            border-radius: 0.75rem;
        }
    </style>
}