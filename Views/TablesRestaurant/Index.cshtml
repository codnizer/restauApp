@model IEnumerable<TableRestaurant>

@{
    ViewData["Title"] = "Table Management";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">Table Management</h3>
                <a asp-action="Create" class="btn btn-light">
                    <i class="bi bi-plus-circle"></i> Create New
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Table Number</th>
                            <th>Room</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <span class="badge bg-primary fs-6">
                                        <i class="bi bi-table me-2"></i>
                                        @Html.DisplayFor(modelItem => item.Numero)
                                    </span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">
                                        @Html.DisplayFor(modelItem => item.Salle.Nom)
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.IdTable" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.IdTable" 
                                           class="btn btn-sm btn-outline-info mx-1">
                                            <i class="bi bi-info-circle"></i> Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.IdTable" 
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        .table th {
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
        }
        .badge {
            padding: 0.6em 1em;
            font-weight: 500;
        }
        .card {
            border-radius: 0.75rem;
        }
        .btn-group .btn {
            transition: all 0.2s ease;
        }
    </style>
}