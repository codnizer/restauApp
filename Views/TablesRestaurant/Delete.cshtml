@model TableRestaurant

@{
    ViewData["Title"] = "Delete Table";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">
                <i class="bi bi-trash3 me-2"></i>
                Delete Table #@Model.Numero
            </h3>
        </div>

        <div class="card-body">
            <div class="alert alert-warning">
                <h5 class="alert-heading">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    Warning! Critical Action
                </h5>
                You are about to permanently delete this table configuration. This action cannot be undone!
            </div>

            <div class="row g-4">
                <!-- Table Details -->
                <div class="col-md-6">
                    <div class="details-section bg-light p-3 rounded">
                        <h5 class="section-title text-muted mb-4">
                            <i class="bi bi-table me-2"></i>
                            Table Information
                        </h5>
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Table Number</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-primary fs-5">
                                    <i class="bi bi-hash me-2"></i>
                                    @Html.DisplayFor(model => model.Numero)
                                </span>
                            </dd>
                        </dl>
                    </div>
                </div>

                <!-- Location Details -->
                <div class="col-md-6">
                    <div class="details-section bg-light p-3 rounded">
                        <h5 class="section-title text-muted mb-4">
                            <i class="bi bi-geo-alt me-2"></i>
                            Location Information
                        </h5>
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Room</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-secondary fs-5">
                                    <i class="bi bi-building me-2"></i>
                                    @Html.DisplayFor(model => model.Salle.Nom)
                                </span>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
            <form asp-action="Delete" class="d-flex justify-content-between">
                <input type="hidden" asp-for="IdTable" />
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Cancel
                </a>
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash3 me-2"></i>Confirm Delete
                </button>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <style>
        .details-section {
            border: 1px solid rgba(0,0,0,0.125);
            transition: transform 0.2s;
        }
        .details-section:hover {
            transform: translateY(-2px);
        }
        .section-title {
            font-size: 0.9rem;
            letter-spacing: 0.5px;
        }
        .badge {
            padding: 0.75em 1.25em;
        }
        .alert-warning {
            border-left: 4px solid #ffc107;
        }
    </style>
}